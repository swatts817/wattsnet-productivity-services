# Productivity Services Environment Variables
# Copy to .env and configure

# Timezone
TZ=America/New_York

# CUPS Print Server
CUPS_USER=admin
CUPS_PASSWORD=changeme

# Thermal Printer Configuration
THERMAL_PRINTER_IP=192.168.0.60
THERMAL_PRINTER_PORT=9100
ENABLE_WEB_UI=true

# Logging
LOG_LEVEL=info

# Optional: Email notifications for print jobs
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=app-specific-password
# NOTIFICATION_EMAIL=admin@example.com

# Optional: Integration with n8n
# N8N_WEBHOOK_URL=https://n8n.wattslabs.dev/webhook/print-notification

# Optional: AirPrint/Bonjour
# ENABLE_AIRPRINT=true
# AIRPRINT_NAME=Wattsnet Printer